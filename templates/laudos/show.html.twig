{% extends 'base.html.twig' %}

{#{% block title %}Laudos{% endblock %}#}

{% block body %}
    {#    <h1>Laudos</h1>#}
    <div class="page-header">
        <h1>
            <span class="text-muted font-weight-light">Laudo / </span>Visualizar Laudo
        </h1>
    </div>
    <div class="main-card mb-3 card">
        <div class="card-body">
            <table class="table table-striped">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ laudo.id }}</td>
                </tr>
                <tr>
                    <th>Descrição do Laudo</th>
                    <td>{{ laudo.dsLaudo }}</td>
                </tr>
                <tr>
                    <th>Data</th>
                    <td>{{ laudo.data ? laudo.data|date('d/m/Y') : '' }}</td>
                </tr>
                <tr>
                    <th>Exames</th>
                    <td><a href="{{ asset('uploads/exame/' ~ laudo.exame.imagens) }}" target="_blank">{{ laudo.exame.imagens }}</a></td>
                </tr>
                </tbody>
            </table>
            <hr>
            <a class="btn btn-secondary" href="{{ path('laudos_index') }}">Voltar à Lista</a>
            <a class="btn btn-primary" href="{{ path('laudos_edit', {'id': laudo.id}) }}">Editar</a>
        </div>
    </div>
{#    {{ include('laudos/_delete_form.html.twig') }}#}
{% endblock %}
