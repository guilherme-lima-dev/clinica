{% extends 'base.html.twig' %}

{#{% block title %}TipoConsulta index{% endblock %}#}

{% block body %}
    {#    <h1>TipoConsulta index</h1>#}
    {#    TODO: EDITAR#}
    <div class="box box-primary">
        <div class="app-page-title">
            <div class="page-title-wrapper">
                <div class="page-title-heading">
                    <div class="page-title-icon">
                        <i class="pe-7s-ticket icon-gradient bg-arielle-smile">
                        </i>
                    </div>
                    <div>Listagem dos Tipos de Sessão
                        <div class="page-title-subheading">Todos os tipos de sessão da Clinica JJM.
                        </div>
                    </div>
                </div>
                <div class="page-title-actions">
                    <a class="btn btn-success m-3" href="{{ path('tipo_consulta_new') }}"><i class="fa fa-plus"></i>
                        Cadastrar</a>
                </div>
            </div>
        </div>
        <div class="panel-body">
            <div class="main-card mb-3 card">
                <div class="card-body">
                    <table class="table" id="tabela-tipo-sessao">
                        <thead>
                        <tr>
                            {#                <th>IdtipoConsulta</th>#}
                            <th>Nome</th>
                            <th>Descricao</th>
                            <th>Ações</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for tipo_consultum in tipo_consultas %}
                            <tr>
                                {#                <td>{{ tipo_consultum.idtipoConsulta }}</td>#}
                                <td>{{ tipo_consultum.nome }}</td>
                                <td>{{ tipo_consultum.descricao }}</td>
                                <td>
                                    <a class="mb-2 mr-2 btn btn-primary"
                                       href="{{ path('tipo_consulta_show', {'idtipoConsulta': tipo_consultum.idtipoConsulta}) }}" title="Ver"
                                       data-toggle="tooltip" data-placement="bottom"><i
                                                class="fa fa-eye"></i></a>

                                    <a class="mb-2 mr-2 btn btn-success"
                                       href="{{ path('tipo_consulta_edit', {'idtipoConsulta': tipo_consultum.idtipoConsulta}) }}" title="Editar"
                                       data-toggle="tooltip" data-placement="bottom"><i
                                                class="fa fa-edit"></i></a>

                                </td>
                            </tr>
                            {#        {% else %}#}
                            {#            <tr>#}
                            {#                <td colspan="4">no records found</td>#}
                            {#            </tr>#}
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <script>
        $(document).ready(function () {
            $('#tabela-tipo-sessao').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.20/i18n/Portuguese-Brasil.json"
                },
                "columnDefs": [
                    {
                        "targets": 2,
                        "orderable": false,
                        // "width" : "20%"
                    },
                ],
                "responsive": true,
                "autoWidth": true
            });
        });
    </script>
    {#    <a href="{{ path('tipo_consulta_new') }}">Create new</a>#}
{% endblock %}
