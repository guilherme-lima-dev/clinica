{% extends 'base.html.twig' %}

{% block title %}Perfil index{% endblock %}

{% block body %}
    <h1>Perfil index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Idperfil</th>
                <th>Nome</th>
                <th>Descricao</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for perfil in perfils %}
            <tr>
                <td>{{ perfil.idperfil }}</td>
                <td>{{ perfil.nome }}</td>
                <td>{{ perfil.descricao }}</td>
                <td>
                    <a href="{{ path('perfil_show', {'idperfil': perfil.idperfil}) }}">show</a>
                    <a href="{{ path('perfil_edit', {'idperfil': perfil.idperfil}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('perfil_new') }}">Create new</a>
{% endblock %}
