{% extends 'base.html.twig' %}

{#{% block title %}Consultas{% endblock %}#}

{% block body %}
    {#    <h1>Consultas</h1>#}
    <div class="page-header">
        <div class="app-page-title">
            <div class="page-title-wrapper">
                <div class="page-title-heading">
                    <div class="page-title-icon">
                        <i class="pe-7s-chat icon-gradient bg-mean-fruit">
                        </i>
                    </div>
                    <div>Detalhe da Sessão
                    </div>
                </div>
                <div class="page-title-actions">

                </div>
            </div>
        </div>
    </div>
    <div class="main-card mb-3 card">
        <div class="card-body">
            <table class="table table-striped">
                <tbody>

                <tr>
                    <th>Data</th>
                    <td>{{ consulta.data ? consulta.data|date('d/m/Y') : '' }}</td>
                </tr>
                <tr>
                    <th>Valor da Consulta</th>
                    <td>R$ {{ consulta.valorConsulta }}</td>
                </tr>
                <tr>
                    <th>Consulta Confirmada?</th>
                    <td>{{ consulta.consultaConfirmada ? 'Sim' : 'Não' }}</td>
                </tr>
                <tr>
                    <th>Psicólogo</th>
                    <td>{{ consulta.funcionarios }}</td>
                </tr>
                <tr>
                    <th>Paciente</th>
                    <td>{{ consulta.idpacientes }}</td>
                </tr>
                <tr>
                    <th>Tipo de Consulta</th>
                    <td>{{ consulta.tipoConsultatipoConsulta }}</td>
                </tr>
                </tbody>
            </table>
            <hr>
            <a class="mb-2 mr-2 btn btn-secondary" href="{{ path('consultas_index') }}">Voltar à Lista</a>

            <a class="mb-2 mr-2 btn btn-primary" href="{{ path('consultas_edit', {'id': consulta.id}) }}">Editar</a>
        </div>
    </div>

    {#{{ include('consultas/_delete_form.html.twig') }}#}
{% endblock %}
