{% extends 'base.html.twig' %}

{% block title %}Consultas index{% endblock %}

{% block body %}

    {#TODO: EDITAR#}
    <div class="box box-primary">
        <div class="app-page-title">
            <div class="page-title-wrapper">
                <div class="page-title-heading">
                    <div class="page-title-icon">
                        <i class="pe-7s-chat icon-gradient bg-mean-fruit">
                        </i>
                    </div>
                    <div>Listagem de Sessões
                        <div class="page-title-subheading">Todas as sessões da Clinica JJM.
                        </div>
                    </div>
                </div>
                <div class="page-title-actions">
                    <a class="btn btn-success m-3" href="{{ path('consultas_new') }}"><i class="fa fa-plus"></i>
                        Cadastrar</a>
                </div>
            </div>
        </div>

        <div class="panel">
            <div class="main-card mb-3 card">
                <div class="card-body">
                    <table id="tabela-consultas" class="table">
                        <thead>
                        <tr>
                            <th>Data</th>
                            <th>Valor da Consulta</th>
                            <th>Consulta Confirmada</th>
                            <th>Ações</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for consulta in consultas %}
                            <tr>
                                <td>{{ consulta.data ? consulta.data|date('Y-m-d H:i:s') : '' }}</td>
                                <td>{{ consulta.valorConsulta }}</td>
                                <td>{{ consulta.consultaConfirmada ? 'Yes' : 'No' }}</td>
                                <td>
                                    <a href="{{ path('consultas_show', {'id': consulta.id}) }}">show</a>
                                    <a href="{{ path('consultas_edit', {'id': consulta.id}) }}">edit</a>
                                </td>
                            </tr>
{#                        {% else %}#}
{#                            <tr>#}
{#                                <td colspan="5">no records found</td>#}
{#                            </tr>#}
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

{#    <a href="{{ path('consultas_new') }}">Create new</a>#}


    <script>
        $(document).ready(function () {
            $('#tabela-consultas').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.20/i18n/Portuguese-Brasil.json"
                },
                "columnDefs": [
                    {
                        "targets": 3,
                        "orderable": false
                    },
                ],
                "responsive": true
            });
        });
    </script>
{% endblock %}
