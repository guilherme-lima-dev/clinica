{% extends 'base.html.twig' %}

{#{% block title %}Laudos index{% endblock %}#}

{% block body %}
    {#    <h1>Laudos index</h1>#}
    {#TODO: EDITAR#}
    <div class="box box-primary">
        <div class="app-page-title">
            <div class="page-title-wrapper">
                <div class="page-title-heading">
                    <div class="page-title-icon">
                        <i class="pe-7s-note2 icon-gradient bg-happy-fisher">
                        </i>
                    </div>
                    <div>Listagem de Laudos
                        <div class="page-title-subheading">Todas os laudos da Clinica JJM.
                        </div>
                    </div>
                </div>
                <div class="page-title-actions">
                    <a class="btn btn-success m-3" href="{{ path('laudos_new') }}"><i class="fa fa-plus"></i>
                        Cadastrar</a>
                </div>
            </div>
        </div>
        <div class="panel">
            <div class="main-card mb-3 card">
                <div class="card-body">
                    <table class="table" id="tabela-laudos">
                        <thead>
                        <tr>
                            {#                <th>Id</th>#}
                            <th>Descrição</th>
                            <th>Data</th>
                            <th>Exames</th>
                            <th>Ações</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for laudo in laudos %}
                            <tr>
                                {#                <td>{{ laudo.id }}</td>#}
                                <td>{{ laudo.dsLaudo|raw }}</td>
                                <td>{{ laudo.data ? laudo.data|date('d/m/Y') : '' }}</td>
                                <td>
                                    {% if laudo.exame|length > 0 %}
                                        <a href="{{ asset('uploads/exame/' ~ laudo.exame.imagens) }}" target="_blank">{{ laudo.exame.imagens }}</a>
                                        {% else %}
                                        &mdash;
                                    {% endif %}
                                </td>
                                <td>
{#                                    <a href="{{ path('laudos_show', {'id': laudo.id}) }}">show</a>#}
{#                                    <a href="{{ path('laudos_edit', {'id': laudo.id}) }}">edit</a>#}


                                    <a class="mb-2 mr-2 btn btn-primary"
                                       href="{{ path('laudos_show', {'id': laudo.id}) }}" title="Ver"
                                       data-toggle="tooltip" data-placement="bottom"><i
                                                class="fa fa-eye"></i></a>

                                    <a class="mb-2 mr-2 btn btn-success"
                                       href="{{ path('laudos_edit', {'id': laudo.id}) }}" title="Editar"
                                       data-toggle="tooltip" data-placement="bottom"><i
                                                class="fa fa-edit"></i></a>


                                </td>
                            </tr>
                            {#        {% else %}#}
                            {#            <tr>#}
                            {#                <td colspan="4">no records found</td>#}
                            {#            </tr>#}
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <script>
        $(document).ready(function () {
            $('#tabela-laudos').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.20/i18n/Portuguese-Brasil.json"
                },
                "columnDefs": [
                    {
                        "targets": 3,
                        "orderable": false
                    },
                ],
                "responsive": true
            });
        });
    </script>
    {#    <a href="{{ path('laudos_new') }}">Create new</a>#}
{% endblock %}
