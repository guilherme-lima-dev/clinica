{% extends 'base.html.twig' %}

{#{% block title %}Pacientes{% endblock %}#}

{% block body %}
    {#    <h1>Pacientes</h1>#}
    <div class="page-header">
        <h1>
            <span class="text-muted font-weight-light">Paciente / </span>Visualizar Paciente
        </h1>
    </div>
    <div class="main-card mb-3 card">
        <div class="card-body">
            <table class="table table-striped">
                <tbody>
                <tr>
                    <th>Nome</th>
                    <td>{{ paciente.nome }}</td>
                </tr>
                <tr>
                    <th>Data de Nascimento</th>
                    <td>{{ paciente.dataNascimento ? paciente.dataNascimento|date('Y-m-d') : '' }}</td>
                </tr>
                <tr>
                    <th>Data de Cadastro</th>
                    <td>{{ paciente.dataCadastro ? paciente.dataCadastro|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>Sexo</th>
                    <td>{{ paciente.sexo }}</td>
                </tr>
                <tr>
                    <th>Estado Civil</th>
                    <td>{{ paciente.estadoCivil }}</td>
                </tr>
                <tr>
                    <th>Profissão</th>
                    <td>{{ paciente.profissao }}</td>
                </tr>
                <tr>
                    <th>Telefone Celular</th>
                    <td>{{ paciente.telefoneCelular }}</td>
                </tr>
                <tr>
                    <th>E-mail</th>
                    <td>{{ paciente.email }}</td>
                </tr>
                <tr>
                    <th>Endereço</th>
                    <td>{{ paciente.endereco }}</td>
                </tr>
                <tr>
                    <th>Uf</th>
                    <td>{{ paciente.uf }}</td>
                </tr>
                <tr>
                    <th>Cidade</th>
                    <td>{{ paciente.cidade }}</td>
                </tr>
                <tr>
                    <th>Cep</th>
                    <td>{{ paciente.cep }}</td>
                </tr>
                <tr>
                    <th>Bairro</th>
                    <td>{{ paciente.bairro }}</td>
                </tr>
                </tbody>
            </table>
            <hr>

            <a class="btn btn-primary" href="{{ path('pacientes_edit', {'id': paciente.id}) }}">Editar</a>

{#            {{ include('pacientes/_delete_form.html.twig') }}#}
        </div>
    </div>
{% endblock %}
