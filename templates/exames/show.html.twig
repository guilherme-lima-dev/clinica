    <div class="page-header">
        <h1>
            <span class="text-muted font-weight-light">Exame / </span>Visualizar Exame
        </h1>
    </div>
    <div class="main-card mb-3 card">
        <div class="card-body">
            <table class="table table-striped">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ exame.id }}</td>
                </tr>
                <tr>
                    <th>Data</th>
                    <td>{{ exame.data ? exame.data|date('d/m/Y') : '' }}</td>
                </tr>
                <tr>
                    <th>Imagens</th>
                    <td>{{ exame.imagens }}</td>
                </tr>
                <tr>
                    <th>Funcionário</th>
                    <td>{{ exame.funcionarios }}</td>
                </tr>
                <tr>
                    <th>Paciente</th>
                    <td>{{ exame.idpacientes }}</td>
                </tr>
                </tbody>
            </table>
            <hr>
            <a class="mb-2 mr-2 btn btn-secondary" href="{{ path('exames_index') }}">Voltar à Lista</a>
            <a class="mb-2 mr-2 btn btn-primary" href="{{ path('exames_edit', {'id': exame.id}) }}">Editar</a>
{#            {{ include('exames/_delete_form.html.twig') }}#}
        </div>
    </div>
