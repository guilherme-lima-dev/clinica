{% extends 'base.html.twig' %}

{#{% block title %}Acesso index{% endblock %}#}

{% block body %}
    {#    TODO: EDITAR#}
    <div class="box box-primary">
        <div class="app-page-title">
            <div class="page-title-wrapper">
                <div class="page-title-heading">
                    <div class="page-title-icon">
                        <i class="pe-7s-config icon-gradient bg-tempting-azure">
                        </i>
                    </div>
                    <div>Listagem de Acessos
                        <div class="page-title-subheading">Todos os acessos dos funcion&aacute;rios da Clinica JJM.
                        </div>
                    </div>
                </div>
                <div class="page-title-actions">
                    <a class="btn btn-success m-3" href="{{ path('acesso_index') }}"><i class="fa fa-plus"></i>
                        Cadastrar</a>
                </div>
            </div>
        </div>
        <div class="panel">
            <div class="main-card mb-3 card">
                <div class="card-body">
                    <table id="tabela-acessos" class="table">
                        <thead>
                        <tr>
                            <th>Usuário</th>
                            <th>Senha</th>
                            <th>Ações</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for acesso in acessos %}
                            <tr>
                                <td>{{ acesso.usuario }}</td>
                                <td>{{ acesso.password }}</td>
                                <td>
                                    <a class="mb-2 mr-2 btn btn-primary"
                                       href="{{ path('acesso_show', {'id': acesso.id}) }}" title="Ver"
                                       data-toggle="tooltip" data-placement="bottom"><i
                                                class="fa fa-eye"></i></a>
                                    <a class="mb-2 mr-2 btn btn-success"
                                       href="{{ path('acesso_edit', {'id': acesso.id}) }}" title="Editar"
                                       data-toggle="tooltip" data-placement="bottom"><i
                                                class="fa fa-edit"></i></a>
                                    <a class="mb-2 mr-2 btn btn-danger"
                                       href="#" title="Desativar" data-toggle="tooltip" data-placement="bottom"><i
                                                class="fas fa-user-slash"></i></a>
                                </td>
                            </tr>
{#                        {% else %}#}
{#                            <tr>#}
{#                                <td colspan="4">no records found</td>#}
{#                            </tr>#}
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    {#    <a href="{{ path('acesso_new') }}">Create new</a>#}

    <script>
        $(document).ready(function () {
            $('#tabela-acessos').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.20/i18n/Portuguese-Brasil.json"
                },
                "columnDefs": [
                    {
                        "targets": 2,
                        "orderable": false
                    },
                ],
                "responsive": true
            });
        });
    </script>
{% endblock %}
