<form method="post" action="{{ path('perfil_delete', {'idperfil': perfil.idperfil}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ perfil.idperfil) }}">
    <button class="btn btn-danger">Deletar</button>
</form>
